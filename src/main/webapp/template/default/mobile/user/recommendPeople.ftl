<#import "/common/app.ftl" as app> <#include "/common/common.ftl" /><!DOCTYPE html><html lang="en"><head><meta charset="utf-8"><meta http-equiv="Content-Language" content="zh-CN"><meta name="keywords" content=""><meta name="description" content=""><meta name="copyright" content="" /><meta name="viewport" content="initial-scale=1,maximum-scale=1,minimum-scale=1"><meta content="yes" name="apple-mobile-web-app-capable"><meta content="black" name="apple-mobile-web-app-status-bar-style"><meta content="telephone=no" name="format-detection"><title>推荐人</title><!-- css --><link href="${app.basePath}/static/touch/css/common.css" rel="stylesheet" type="text/css" /><link href="${app.basePath}/static/touch/css/main.css" rel="stylesheet" type="text/css" /><link href="${app.basePath}/static/touch/css/x_pc.css" rel="stylesheet" type="text/css" /><!-- js --><script type="text/javascript" src="${app.basePath}/static/touch/js/jquery-1.9.1.min.js"></script><script type="text/javascript" src="${app.basePath}/static/touch/js/common.js"></script></head><body class="body_gray">  <!-- header_top -->  <div class="top_heater">    <a href="${app.basePath}/mobile/user/center" title="返回个人中心" class="hleft hback"></a>    <span>推荐人</span>  </div>  <!-- header_top end -->  <!-- Center Start -->  <section class="container recommended">  	<#if upOneRecommendPerson??>	    <article class="person-list">	      <section class="top">	        <div class="tips">推荐</div>	        <div class="level">一级推荐人</div>	      </section>	      <section class="person-info">	        <div class="head-img"><img src="${app.basePath}${upOneRecommendPerson.uavatar!''}" alt="无头像"></div>	        <div class="wrtings">	          <h3>${upOneRecommendPerson.unick!''}</h3>	          <p class="p1"><#if upOneRecommendPerson?? && upOneRecommendPerson.ugenter?? && upOneRecommendPerson.ugenter == 1><i class="icon-sex"></i><#else><i class="icon-sex icon-woman"></#if>${upOneRecommendPerson.UgenterStr!''}</p>	          <p class="p2">用户名：${upOneRecommendPerson.uname!''}</p>	          <p class="p3">注册时间：${upOneRecommendPerson.createTime?string('yyyy-MM-dd')}</p>	        </div>	      </section>	    </article>	</#if>	<#if upTwoRecommendPerson??>	    <article class="person-list">	      <section class="top">	        <div class="tips">推荐</div>	        <div class="level">二级推荐人</div>	      </section>	      <section class="person-info">	        <p class="p1"><#if upTwoRecommendPerson?? && upTwoRecommendPerson.ugenter?? && upTwoRecommendPerson.ugenter == 1><i class="icon-sex"></i><#else><i class="icon-sex icon-woman"></#if>${upTwoRecommendPerson.UgenterStr!''}</p>	        <div class="wrtings">	          <h3>${upTwoRecommendPerson.unick!''}</h3>	          <p class="p1"><i class="icon-sex icon-woman"></i>${upTwoRecommendPerson.UgenterStr!''}</p>	          <p class="p2">用户名：${upTwoRecommendPerson.uname!''}</p>	          <p class="p3">注册时间：${upTwoRecommendPerson.createTime?string('yyyy-MM-dd')}</p>	        </div>	      </section>	    </article>    </#if>	<#if upThreeRecommendPerson??>	    <article class="person-list">	      <section class="top">	        <div class="tips">推荐</div>	        <div class="level">三级推荐人</div>	      </section>	      <section class="person-info">	        <div class="head-img"><img src="${app.basePath}${upThreeRecommendPerson.uavatar!''}" alt="无头像"></div>	        <div class="wrtings">	          <h3>${upThreeRecommendPerson.unick!''}</h3>	          <p class="p1"><#if upThreeRecommendPerson?? && upThreeRecommendPerson.ugenter?? && upThreeRecommendPerson.ugenter == 1><i class="icon-sex"></i><#else><i class="icon-sex icon-woman"></#if>${upThreeRecommendPerson.UgenterStr!''}</p>	          <p class="p2">用户名：${upThreeRecommendPerson.uname!''}</p>	          <p class="p3">注册时间：${upThreeRecommendPerson.createTime?string('yyyy-MM-dd')}</p>	        </div>	      </section>	    </article>    </#if>  </section>  <!-- Center End --></body></html>