<#import "/common/app.ftl" as app> <#include "/common/common.ftl" /><!doctype html><html><head><meta charset="utf-8">  <meta http-equiv="Content-Language" content="zh-CN">  <meta name="keywords" content="${system.webkeywords!''}">  <meta name="description" content="${system.webdescription!''}">  <meta name="copyright" content="${system.webcopyright!''}" />  <link rel="shortcut icon" href="${app.basePath}/static/default/images/icon.ico" />  <meta name="viewport" content="initial-scale=1,maximum-scale=1,minimum-scale=1">  <meta content="yes" name="apple-mobile-web-app-capable">  <meta content="black" name="apple-mobile-web-app-status-bar-style">  <meta content="telephone=no" name="format-detection">  <title><#if address??>修改地址<#else>新增收货地址</#if></title>  <!-- css -->  <link href="${app.basePath}/static/touch/css/common.css" rel="stylesheet" type="text/css" />  <link href="${app.basePath}/static/touch/css/main.css" rel="stylesheet" type="text/css" />  <link href="${app.basePath}/static/touch/css/x_pc.css" rel="stylesheet" type="text/css" />  <!-- js -->  <script type="text/javascript" src="${app.basePath}/static/touch/js/jquery-1.9.1.min.js"></script>  <script type="text/javascript" src="${app.basePath}/static/touch/js/common.js"></script>  <script type="text/javascript" src="${app.basePath}/static/touch/js/shoppingAddressAdd.js"></script>  <script type="text/javascript" src="${app.basePath}/static/touch/js/jquery.cityselect.js"></script>  <script type="text/javascript" src="${app.basePath}/static/touch/js/touch-0.2.14.min.js"></script>  <script type="text/javascript" src="${app.basePath}/static/touch/js/winout.js"></script>  <script type="text/javascript">  $(function(){      $('body').winout({        innerwidth:"4rem",        font:"0.24rem",        innerheight:"0.8rem",        lineheight:"0.8rem",        innertext:"保存成功"      });      $("#address").citySelect({          nodata:"none",          <#if province??>prov: "${province!''}",</#if>          <#if city??>city: "${city!''}",</#if>          <#if district??>dist: "${district!''}",</#if>          required:false      });    });  </script></head><body class="body_gray">		<!-- 引入警告提示样式 -->        <#include "/common/common_warn.ftl">        <!-- 引入等待提示样式 -->        <#include "/common/common_wait.ftl"> <!-- header_top --><div class="top_heater">  <a href="${app.basePath}/mobile/user/shoppingAddress" title="" class="hleft hback"></a>  <span><#if address??>修改地址<#else>新增收货地址</#if></span>  <a href="#" title="" class="hright hsave" onclick="save();">保存</a></div><!-- header_top end --><!-- Center Start --><section class="container add-new-address">  <form id="submitForm" >    <div class="inpt">      <#if address??><input type="hidden" id="addressId"  value="${address.id!''}" ></#if>      <label>收货人</label>      <input type="text" id="receiverName" placeholder="收货人姓名" <#if address??>value="${address.name!''}"</#if> >    </div>    <div class="inpt">      <label>联系电话</label>      <input type="text" id="receiverMobile" placeholder="收货人电话" <#if address??>value="${address.telphone!''}"</#if> >    </div>    <div id="address" class="inpt">       <label>所在地区</label>       <select id="dist" name="disctrictId" class="dist"></select>       <select id="city" name="cityId" class="city"></select>       <select id="prov" name="provinceId" class="prov"></select>     </div>    <textarea id="detailAddress" placeholder="详细地址"><#if address??>${address.address!''}</#if></textarea>    <div class="set-default">      <label>设为默认地址</label>      <i></i>    </div>    <script type="text/javascript">      var onOff = false;      $(function(){        $(".add-new-address .set-default i").click(function(){          if(!onOff){            $(this).addClass('checked');          }else{            $(this).removeClass('checked');          }          onOff = !onOff;        });      });    </script>  </form></section><!-- Center End --></body></html>