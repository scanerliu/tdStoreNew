<#import "/common/app.ftl" as app> <#include "/common/common.ftl" /><!doctype html><html><head><meta charset="utf-8">  <meta http-equiv="Content-Language" content="zh-CN">  <meta name="keywords" content="${system.webkeywords!''}">  <meta name="description" content="${system.webdescription!''}">  <meta name="copyright" content="${system.webcopyright!''}" />  <link rel="shortcut icon" href="${app.basePath}/static/default/images/icon.ico" />  <meta name="viewport" content="initial-scale=1,maximum-scale=1,minimum-scale=1">  <meta content="yes" name="apple-mobile-web-app-capable">  <meta content="black" name="apple-mobile-web-app-status-bar-style">  <meta content="telephone=no" name="format-detection">  <title><#if shopping??>选择收货地址<#else>收货地址</#if></title>  <!-- css11 -->  <link href="${app.basePath}/static/touch/css/common.css" rel="stylesheet" type="text/css" />  <link href="${app.basePath}/static/touch/css/main.css" rel="stylesheet" type="text/css" />  <link href="${app.basePath}/static/touch/css/x_pc.css" rel="stylesheet" type="text/css" />  <!-- js -->  <script type="text/javascript" src="${app.basePath}/static/touch/js/jquery-1.9.1.min.js"></script>  <script type="text/javascript" src="${app.basePath}/static/touch/js/common.js"></script>  <script type="text/javascript" src="${app.basePath}/static/touch/js/touch-0.2.14.min.js"></script>  </head><body class="body_gray">		<#-- 引入警告提示样式 -->        <#include "/common/common_warn.ftl">        <#-- 引入等待提示样式 -->        <#include "/common/common_wait.ftl"> <!-- header_top --><div class="top_heater">  <a href="<#if shopping??>${app.basePath}/mobile/shoppingcart/confirmorder<#else>${app.basePath}/mobile/user/info</#if>" title="" class="hleft hback"></a>  <span><#if shopping??>选择收货地址<#else>收货地址</#if></span></div><!-- header_top end --><!-- Center Start --><section class="container">  <ul class="addresslist">  <#if address_list??>	  <#if address_list?size gt 0>		  <#list address_list as address>		  	<li style="width:6rem;" class="swipe" id=${address.id!""} <#if shopping??>onclick="window.location.href='${app.basePath}/mobile/shoppingcart/${returnPath!''}?addressId=${address.id!''}'"</#if> >		      <article style="padding:0">		        <div class="address-wrap" style="overflow:hidden;width:6rem;height:1.6rem">		          <span class="fl">${address.name!''}</span>		          <span class="fr">${address.telphone!''}</span>		          <span style="display:block;overflow:hidden;height:.8rem;" class="address">${address.fullAddress!''}</span>		        </div>		        <div class="address-edit">		          <a href="<#if address.isDefault?? && address.isDefault==true>#<#else>${app.basePath}/mobile/user/shoppingAddress?addressId=${address.id}</#if>" title=""><span class="<#if address.isDefault?? && address.isDefault==true>default<#else>setdefault</#if>"><i></i><label for="">默认地址</label></span></a>		          <a href="${app.basePath}/mobile/user/shoppingAddressAdd?addressId=${address.id}" title="" class="a-edit">编辑</a>		        </div>		      </article>		      <a class="btn-swipe-delete">删除</a>		    </li>		  </#list>		<#else>			<script type="text/javascript">				setInterval("warning("快去新增地址吧")",1000);			</script>		</#if>  </#if>  </ul>  </section><!-- Center End --><script type="text/javascript">    $(function touch(){        $(".addresslist .swipe").on('touchmove', function(ev){          ev.preventDefault(); // 阻止冒泡事件        });        // 向左滑动        $(".addresslist .swipe").on('swipeleft', function(ev){          $(this).addClass("selected");        });        // 向右滑动        $(".addresslist .swipe").on('swiperight', function(ev){          $(this).removeClass("selected");        });        // 点击删除        $(".addresslist li a.btn-swipe-delete").click(function(){          var currentSelect = $(this).parent(".addresslist li");          var addressId = $(this).parent(".addresslist li").attr("id");	        wait();	        $.ajax({	            url:"${app.basePath}/mobile/user/shoppingAddressDelete",	            type:"post",	            async:true,	            dateType:'text',	            data:{	                addressId:addressId	            },	            error:function(){	                close(1000);	            },	            success:function(resMap){	                close(1);	                var result = eval("("+resMap+")");	                if(result.status == 1)	                {	                    currentSelect.remove();	                }	                else	                {	                    warning(result.msg);	                }	            }	        });        });    });  </script><div class="clear" style="width:100%;height:.8rem;"></div><a class="btn-now-withdraw" href="${app.basePath}/mobile/user/shoppingAddressAdd" title="">添加新地址</a></body></html>